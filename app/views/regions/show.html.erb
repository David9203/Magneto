<p id="notice"><%= notice %></p>

<p>
  <strong>Region:</strong>
  <%= @region.region %>
</p>

<p>
  <strong>Code:</strong>
  <%= @region.code %>
</p>

<h2>Municipios</h2>
<%= render @region.municipios %>

<h2>Add a municipio:</h2>

<%= form_for([@region, @region.municipios.build]) do |f| %>
  <div class="field">
    <%= f.label :municipio %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :codigo %><br />
    <%= f.text_area :code %>
  </div>
  <div class="field">
    <%= f.label :estado %><br />
    <%= f.check_box :state %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Edit', edit_region_path(@region) %> |
<%= link_to 'Back', regions_path %>
